<div class="container mx-auto px-4">
  <div class="flex flex-wrap">
    <div class="bg-gray-950">
      <h1 class="text-xl font-bold text-slate-50"><%= t('user_sessions.new.title') %></h1>
      <%= form_with url: login_path do |f| %>
      <div class="tracking-normal text-slate-50">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control" %>
      </div>
      <div class="tracking-normal text-slate-50">
        <%= f.label :password %>
        <%= f.password :password], class: "form-control" %>
      </div>
      <%= f.submit t('user_sessions.new.submit'), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>