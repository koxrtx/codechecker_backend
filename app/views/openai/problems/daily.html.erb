<h1 class="text-xl font-bold text-slate-50 mb-4"><%= t('problems.daily.title') %></h1>
<div class="text-slate-50">
  <%= form_with url: problem_answer_path, method: :post, local: true do |f| %>
    <p><%= @problem %></p>
      <div class="tracking-normal text-slate-50">
        <%= f.text_area :answer, class: "bg-gray-950 text-white border border-gray-500 rounded w-full p-2" %>
      </div>
      <div class="tracking-normal text-slate-50">
        <%= f.submit t('problems.daily.submit'), class: "btn btn-primary" %>
      </div>
  <% end %>
</div>